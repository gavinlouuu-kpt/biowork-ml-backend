# Basic auth for model server (optional)
BASIC_AUTH_USER=
BASIC_AUTH_PASS=

# Logging
LOG_LEVEL=DEBUG

# Runtime output configuration  
RESPONSE_TYPE=brush
POLYGON_DETAIL_LEVEL=0.0001
MAX_RESULTS=20

# Docker/Gunicorn settings
WORKERS=1
THREADS=8
TEST_ENV=

# Model configuration
MODEL_DIR=/data/models
SAM2_CHOICE=tiny
MODEL_CONFIG=configs/sam2.1/sam2.1_hiera_t.yaml
MODEL_CHECKPOINT=sam2.1_hiera_tiny.pt
DEVICE=cuda

# Preannotation (AMG) toggles
SAM_PREANNOTATE=0
SAM_AMG_POINTS_PER_SIDE=32
SAM_AMG_PRED_IOU_THRESH=0.86
SAM_AMG_STABILITY_SCORE_THRESH=0.95
SAM_AMG_MIN_MASK_REGION_AREA=50
SAM_AMG_CROP_N_LAYERS=0
SAM_AMG_NMS_IOU_THRESH=0.7

# Label Studio access (for local/cloud storage)
LABEL_STUDIO_URL=
LABEL_STUDIO_API_KEY=

# Organization middleware (optional - for automatic token resolution)
USE_ORG_MIDDLEWARE=true
LABEL_STUDIO_HOST=http://label-studio-app-dev:8000
LABEL_STUDIO_DB_TYPE=postgres
LABEL_STUDIO_DB_PATH=
LABEL_STUDIO_DB_HOST=db-dev
LABEL_STUDIO_DB_PORT=5432
LABEL_STUDIO_DB_NAME=postgres
LABEL_STUDIO_DB_USER=postgres
LABEL_STUDIO_DB_PASSWORD=postgres
